<%- include('../layout/admin/header.ejs') -%>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">User Management</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(function(user) { %>
                    <tr>
                      <td><%= user.name %></td> <!-- Replace with actual user properties -->
                      <td><%= user.email %></td>
                      <td><%= user.mobile %></td>
                      <td>
                        <!-- Add action buttons as needed, e.g., Edit and Delete -->
                        <!-- <a href="/edit/<%= user._id %>" class="btn btn-primary">Edit</a> -->
                        <a href="/admin/blockUser?_id=<%= user._id %>" class="btn btn-danger block-button" data-initial-status="<%= user.is_blocked %>">
                          <%= user.is_blocked ? "Unblock" : "Block" %>
                        </a>                        
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
  <%- include('../layout/admin/footer.ejs') -%>