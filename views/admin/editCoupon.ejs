<%- include('../layout/admin/header.ejs') -%>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <br>
        <br>
        <br>
        <h1 class="card-title">Edit Coupon</h1>
        <p class="card-description"> Edit coupon form</p>
          <form action="/admin/editCoupon?_id=<%= coupon._id %>" id="form" class="forms-sample" method="post" >  
            <div class="form-group">
                <label for="couponName">coupon Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="name"  value="<%= coupon.name %>"  style="color: white;">
                <p style="color: red;" id="nameLengthError"></p>
            </div>
            <div class="form-group">
                <label for="couponCode">Coupon Code</label>
                <input type="text" class="form-control" id="exampleInputEmail3" name="code" placeholder="code" value="<%= coupon.couponCode %>" style="color: white;">
            </div>
            <div class="form-group">
                <label for="discount">Discount Amount</label>
                <input type="number" class="form-control" id="discount" name="discount" placeholder="discount amount" value="<%= coupon.discountAmount %>" style="color: white;">
                <p style="color: red;" id="discountError"></p>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail3">Activation Date</label>
              <input type="date" class="form-control" id="activationDate" name="activationDate" placeholder="activation date"value="<%= coupon.activationDate.toISOString().split('T')[0] %>" style="color: white;">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail3">Expire Date</label>
                <input type="date" class="form-control" id="expiryDate" name="expiryDate" placeholder="expire date" value="<%= coupon.expiryDate.toISOString().split('T')[0] %>" style="color: white;">
            </div>
            <div class="form-group">
                <label for="criteriaAmount">Criteria Amount</label>
                <input type="number" class="form-control" id="criteriaAmount" name="criteriAamount" placeholder="criteria amount" value="<%= coupon.criteriaAmount %>"  style="color: white;">
                <p style="color: red;" id="criteriaAmountErr"></p>
            </div>
            <div class="form-group">
                <label for="userLimit">User Limits</label>
                <input type="number" class="form-control" id="userLimit" name="userLimit" placeholder="user limits" value="<%= coupon.usersLimit %>"   style="color: white;">
                <p style="color: red;" id="userLimitErr"></p>
            </div>
