<%- include('../layout/admin/header.ejs') -%>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row" >
      <div class="col-lg-12"id="reloadArea" >
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">User Management</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(function(user) { %>
                    <tr>
                      <td><%= user.name %></td> <!-- Replace with actual user properties -->
                      <td><%= user.email %></td>
                      <td><%= user.mobile %></td>
                      <td>
                        <!-- Add action buttons as needed, e.g., Edit and Delete -->
                        <!-- <a href="/edit/<%= user._id %>" class="btn btn-primary">Edit</a> -->
                        <!-- <a href="/admin/blockUser?_id=<%= user._id %>" class="btn btn-danger block-button" data-initial-status="<%= user.is_blocked %>">
                          <%= user.is_blocked ? "Unblock" : "Block" %>
                        </a> -->
                        <button class="btn btn-danger block-button" data-user-id="<%= user._id %>" data-initial-status="<%= user.is_blocked %>" onclick="block('<%= user._id %>')">
                          <%= user.is_blocked ? "Unblock" : "Block" %>
                        </button>
                        
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
   function block(userId) {
        const data = {userId:userId}
        console.log(data);
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't to Bock/Unblock thsi user!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes!',
   
        }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            method: 'POST',
            url: '/admin/blockUser', 
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: function (response) {
                if(response.block===true){
                    $('#reloadArea').load('/admin/user #reloadArea'); 
                }else{
                    swal("Stock Limit Reached", "", "error")
                    $('#reloadArea').load('/cart #reloadArea'); 
                }

            },
            error: function (error) {

                console.error(error);
            }
        });
        }
        })
        
    }
</script>






